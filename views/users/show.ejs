            </tr>
    </tbody>
</table>
<% if(currentUser.following.includes(user._id)){ %>
    <a  class="button" href="<%=` /users/unfollow/${user._id} `%>">Unfollow</a>
<% }else { %>
    <a  class="button" href="<%=` /users/follow/${user._id} `%>">Follow</a>
<% } %>

<a href="/home">Home</a>
<h2 class="center">User Data for <%= user.fullName %></h2>
<table class="table">
    <tbody>
            <tr>
                <td>Name:</td>
                <td>
                    <%= user.fullName %>
                </td>
            </tr>
            <tr>
                <td>Username:</td>
                <td>
                    <%= user.username %>
                </td>
            </tr>
            <tr>
                <td>Number of posts:</td>
                <td>
                    <%= user.numPosts %>
                </td>
            </tr>
            <tr>
                <td>Email:</td>
                <td>
                    <%= user.email %>
                </td>
            </tr>
            <tr>
                <td>Location:</td>
                <td>
                    <%= user.location %>
                </td>
            </tr> 
            <tr>
                <td>Gender:</td>
                <td>
                    <%= user.gender %>
                </td>
            </tr>
            <tr>
                <td>
                    <a href="<%= `edit`%>">
                        Edit
                    </a>
                </td>
                <td>
                    <a href="<%= `/users/${user._id}/delete?_method=DELETE `%>" onclick="return confirm('Are you sure?')">
                        Delete
                    </a>
                </td>
            </tr>       
    </tbody>
</table>